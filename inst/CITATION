bibentry(
  bibtype      = "Manual",
  key          = "R-tesselle",
  author       = person("Nicolas", "Frerebeau", role = "aut"),
  title        = "{tesselle: Easily Install and Load 'tesselle' Packages}",
  year         = "2024",
  organization = "Universit√© Bordeaux Montaigne",
  address      = "Pessac, France",
  note         = sprintf("R package version %s", meta$Version),
  url          = "https://packages.tesselle.org/tesselle/",
  doi          = "10.5281/zenodo.6500491"
)
